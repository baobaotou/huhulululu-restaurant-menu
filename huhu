        const categoryTabs = document.getElementById("categoryTabs");
        const dishList = document.getElementById("dishList");

        // 1. æ¸²æŸ“åˆ†ç±»æ ‡ç­¾
        function renderCategoryTabs() {
            MENU_DATA.forEach((category, index) => {
                const tab = document.createElement("button");
                tab.className = `category-tab ${index === 0 ? "active" : ""}`;
                tab.textContent = category.category;
                tab.onclick = () => {
                    // åˆ‡æ¢æ´»è·ƒæ ‡ç­¾
                    document.querySelectorAll(".category-tab").forEach(t => t.classList.remove("active"));
                    tab.classList.add("active");
                    // æ¸²æŸ“å¯¹åº”åˆ†ç±»çš„èœå“
                    renderDishes(index);
                };
                categoryTabs.appendChild(tab);
            });
        }

        // 2. æ¸²æŸ“èœå“åˆ—è¡¨
        function renderDishes(categoryIndex) {
            const selectedCategory = MENU_DATA[categoryIndex];
            dishList.innerHTML = ""; // æ¸…ç©ºåŸæœ‰èœå“

            selectedCategory.dishes.forEach(dish => {
                const dishItem = document.createElement("div");
                dishItem.className = "dish-item";
                // æ‹¼æ¥èœå“HTML
                dishItem.innerHTML = `
                    <img src="${dish.img}" alt="${dish.name}" class="dish-img">
                    <div class="dish-info">
                        <div class="dish-name">${dish.name}</div>
                        <div class="dish-desc">${dish.desc}</div>
                        <div class="dish-price">Â¥${dish.price}</div>
                    </div>
                `;
                dishList.appendChild(dishItem);
            });
        }

        // åˆå§‹åŒ–ï¼šæ¸²æŸ“æ ‡ç­¾å’Œé»˜è®¤èœå“
